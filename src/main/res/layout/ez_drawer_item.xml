<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_item_layout"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:listSelector="@android:color/transparent">

    <RelativeLayout
        android:id="@+id/drawer_item_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:listSelector="@android:color/transparent">

        <TextView
            style="@style/NavDrawerItem"
            android:id="@+id/nav_drawer_text"
            android:text="{text}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/nav_drawer_item_icon_left"
            android:layout_toEndOf="@+id/nav_drawer_item_icon_left"
            android:layout_marginLeft="4dp"/>

        <ImageView
            android:id="@+id/nav_drawer_item_icon_left"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="18dp"
            android:src="@drawable/abc_btn_check_to_on_mtrl_000"/>

        <ImageView
            android:id="@+id/nav_drawer_item_icon_right"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="18dp"
            android:src="@drawable/abc_btn_check_to_on_mtrl_000"/>

    </RelativeLayout>

    <View
        android:id="@+id/ez_drawer_item_divider"
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="@color/ez_horizontal_rule"
        android:visibility="gone"/>

</LinearLayout>
