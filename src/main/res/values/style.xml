    <style name="EZCardTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:gravity">bottom|left</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:onClick">onUIClick</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?selectableItemBackground</item>
    </style>

    <style name="EZFloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="EZTextField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/marginMedium</item>
        <item name="android:paddingTop">@dimen/marginMedium</item>
    </style>

    <style name="EZSpinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/ez_primary_text</item>
        <item name="android:textSize">@dimen/textSizeDefault</item>
    </style>

    <style name="Text.Accented">
        <item name="android:textColor">@color/ez_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Header3">
        <item name="android:textColor">@color/ez_primary_dark</item>
        <item name="android:textSize">@dimen/textSizeLarge</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Header4">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Drawer">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">@dimen/textSizeMedium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/marginMedium</item>
        <item name="android:layout_marginBottom">@dimen/marginMedium</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
    </style>

    <style name="Separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/ez_divider</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
    </style>

</resources>