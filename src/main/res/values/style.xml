<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="NewApi">

    <style name="EZDrawerLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="EZCoordinatorLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="EZAppBarLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <!-- Collapse Specific Styles -->
    <style name="EZAppBarLayoutCollapse">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">256dp</item>                                 <!-- diff -->
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:fitsSystemWindows">true</item>                              <!-- diff -->
        <item name="elevation">0dp</item>
    </style>

    <style name="EZAppCollapsingToolbarLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="contentScrim">?attr/colorPrimary</item>
        <item name="expandedTitleMarginStart">48dp</item>
        <item name="expandedTitleMarginEnd">64dp</item>
        <item name="layout_scrollFlags">scroll|exitUntilCollapsed</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="EZAppCollapsingToolbarContentLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="EZCoordinatorLayoutCollapse">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fitsSystemWindows">true</item><!---->
    </style>

    <style name="EZToolbarCollapse">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="layout_collapseMode">pin</item>
        <!-- <item name="android:background">?attr/colorPrimary</item> -->
        <!-- <item name="layout_scrollFlags">scroll|enterAlways|snap</item> -->
    </style>
    <!-- END: Collapse Specific Styles -->

    <style name="EZToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="layout_collapseMode">pin</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="layout_scrollFlags">scroll|enterAlways|snap</item>
    </style>

    <style name="EZTabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="tabTextColor">@color/ez_text_hint</item>
        <item name="tabSelectedTextColor">@color/ez_text_light</item>
        <item name="layout_scrollFlags">scroll|enterAlways|snap</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="layout_anchor">@+id/ez_AppBarLayout</item>
        <item name="layout_anchorGravity">bottom</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="EZTabViewPager">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="layout_behavior">@string/appbar_scrolling_view_behavior</item>
    </style>

    <style name="EZTabViewPagerCollapse">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="layout_behavior">@string/appbar_scrolling_view_behavior</item>
        <item name="android:layout_marginTop">?attr/actionBarSize</item>
    </style>

    <style name="EZSlidingTabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>
        <item name="layout_scrollFlags">scroll|enterAlways</item>
    </style>

    <style name="EZNestedScrollView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="layout_behavior">@string/appbar_scrolling_view_behavior</item>
    </style>

    <style name="EZNestedScrollViewContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="EZMainContentView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="EZViewPager">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="layout_scrollFlags">scroll|enterAlways</item>
    </style>



















    <style name="EZDrawer">
        <item name="android:layout_width">@dimen/nav_drawer_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:fillViewport">true</item>
        <item name="android:background">?attr/colorPrimaryDark</item>
        <item name="insetForegroundLegacy">@color/ez_horizontal_rule</item>
    </style>

    <style name="EZDrawer.Right">
        <item name="android:layout_width">@dimen/nav_drawer_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:fillViewport">true</item>
        <item name="android:background">?attr/colorPrimaryDark</item>
        <item name="insetForegroundLegacy">@color/ez_horizontal_rule</item>
    </style>

    <style name="EZDrawerHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="EZDrawerHeader.Right">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="EZDrawerHeaderText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/marginMedium</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:textColor">@color/ez_text_light</item>
        <item name="android:drawablePadding">@dimen/nav_drawer_item_drawable_padding</item>
        <item name="android:text">"Override style EZDrawerHeader"</item>
        <item name="android:drawableLeft">@drawable/ic_star</item>
        <item name="android:drawableStart">@drawable/ic_star</item>
    </style>

    <style name="EZDrawerHeaderText.Right">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/marginMedium</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:textColor">@color/ez_text_light</item>
        <item name="android:drawablePadding">@dimen/nav_drawer_item_drawable_padding</item>
        <item name="android:text">"Override style EZDrawerHeader"</item>
        <item name="android:drawableLeft">@drawable/ic_star</item>
        <item name="android:drawableStart">@drawable/ic_star</item>
    </style>

    <style name="EZDrawerNavList">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/ez_background</item>
        <item name="android:listSelector">@drawable/ez_drawer_selector</item>
    </style>

    <style name="EZDrawerNavList.Right">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/ez_background</item>
        <item name="android:listSelector">@drawable/ez_drawer_selector</item>
    </style>

    <style name="EZSpinnerItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/marginSmall</item>
        <item name="android:paddingBottom">@dimen/marginMedium</item>
        <item name="android:paddingTop">@dimen/marginMedium</item>
    </style>

    <style name="EZToolbarHomeButton">
        <item name="android:src">@drawable/ic_ab_drawer_mask</item>
        <item name="android:tint">?actionBarIconColor</item>
    </style>

