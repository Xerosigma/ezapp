<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="NewApi">

    <style name="EZNavigationDrawer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:layout_gravity">start</item>
    </style>

    <style name="EZNavigationDrawer.Left">
        <item name="android:layout_gravity">start</item>
        <item name="menu">@menu/ez_drawer_left</item>
    </style>

    <style name="EZNavigationDrawer.Right">
        <item name="android:layout_gravity">end</item>
        <item name="menu">@menu/ez_drawer_right</item>
    </style>

    <style name="EZDrawerLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="EZCoordinatorLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="EZAppBarLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <!-- Collapse Specific Styles -->
    <style name="EZAppBarLayoutCollapse">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">256dp</item>                                 <!-- diff -->
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:fitsSystemWindows">true</item>                              <!-- diff -->
        <item name="elevation">0dp</item>
    </style>

    <style name="EZAppCollapsingToolbarLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="contentScrim">?attr/colorPrimary</item>
        <item name="expandedTitleMarginStart">48dp</item>
        <item name="expandedTitleMarginEnd">64dp</item>
        <item name="layout_scrollFlags">scroll|exitUntilCollapsed</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="EZAppCollapsingToolbarContentLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="EZCoordinatorLayoutCollapse">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fitsSystemWindows">true</item><!---->
    </style>

    <style name="EZToolbarCollapse">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="layout_collapseMode">pin</item>
        <!-- <item name="android:background">?attr/colorPrimary</item> -->
        <!-- <item name="layout_scrollFlags">scroll|enterAlways|snap</item> -->
    </style>
    <!-- END: Collapse Specific Styles -->

    <style name="EZToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="layout_collapseMode">pin</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="layout_scrollFlags">scroll|enterAlways|snap</item>
    </style>

    <style name="EZTabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="tabTextColor">@color/ez_text_hint</item>
        <item name="tabSelectedTextColor">@color/ez_text_light</item>
        <item name="layout_scrollFlags">scroll|enterAlways|snap</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="layout_anchor">@+id/ez_AppBarLayout</item>
        <item name="layout_anchorGravity">bottom</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="EZTabViewPager">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="layout_behavior">@string/appbar_scrolling_view_behavior</item>
    </style>

    <style name="EZTabViewPagerCollapse">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="layout_behavior">@string/appbar_scrolling_view_behavior</item>
        <item name="android:layout_marginTop">?attr/actionBarSize</item>
    </style>

    <style name="EZSlidingTabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>
        <item name="layout_scrollFlags">scroll|enterAlways</item>
    </style>

    <style name="EZNestedScrollView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="layout_behavior">@string/appbar_scrolling_view_behavior</item>
        <item name="android:fillViewport">true</item>
    </style>

    <style name="EZMainContentView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="EZViewPager">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="layout_scrollFlags">scroll|enterAlways</item>
    </style>

    <style name="EZSpinnerItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/marginSmall</item>
        <item name="android:paddingBottom">@dimen/marginMedium</item>
        <item name="android:paddingTop">@dimen/marginMedium</item>
    </style>

    <style name="EZToolbarHomeButton">
        <item name="android:src">@drawable/ez_ic_ab_drawer</item>
        <item name="android:tint">?actionBarIconColor</item>
    </style>

    <style name="EZCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_marginBottom">16dp</item>

        <!--
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        -->
    </style>

    <style name="EZCardPhoto">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:tint">@color/ez_tint</item>
        <item name="android:scaleType">centerCrop</item> -->

        <!-- Add to enable: compile 'com.makeramen:roundedimageview:1.5.0' -->
        <!-- <item name="riv_corner_radius">@dimen/card_corner_radius</item> -->
    </style>

    <style name="EZCardTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:gravity">bottom|left</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:onClick">onUIClick</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?selectableItemBackground</item>
    </style>

    <style name="EZFloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_gravity">end|bottom</item>
        <item name="android:src">@android:drawable/ic_menu_share</item>
    </style>

    <style name="EZTextField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/marginMedium</item>
        <item name="android:paddingTop">@dimen/marginMedium</item>
    </style>

    <style name="EZSpinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/ez_primary_text</item>
        <item name="android:textSize">@dimen/textSizeDefault</item>
    </style>

    <style name="Text.Accented">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Header1">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">@dimen/textSizeLarge</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Header2">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">@dimen/textSizeMedium2</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Header3">
        <item name="android:textColor">@color/ez_primary_dark</item>
        <item name="android:textSize">@dimen/textSizeLarge</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Header4">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Card">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">bottom|left</item>
        <item name="android:padding">@dimen/basePadding</item>
    </style>

    <style name="Text.Drawer">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">@dimen/textSizeMedium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/marginMedium</item>
        <item name="android:layout_marginBottom">@dimen/marginMedium</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
    </style>

    <style name="Text.Drawer.Inactive">
        <item name="android:textColor">@color/ez_textDrawerInactive</item>
        <item name="android:textSize">@dimen/textSizeMedium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Rule">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/ez_separator_light</item>
    </style>

    <style name="Rule.Spaced">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
    </style>

    <style name="ViewBlock">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_margin">@dimen/marginLarge</item>
    </style>

    <style name="Card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">@drawable/ez_ripple</item>
    </style>

    <style name="Separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/ez_divider</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/marginMedium</item>
        <item name="android:layout_marginBottom">@dimen/marginSmall</item>
        <item name="android:layout_marginLeft">@dimen/marginSmall</item>
        <item name="android:layout_marginRight">@dimen/marginSmall</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">@dimen/textSizeMedium</item>
        <item name="android:foreground">@drawable/ez_ripple</item>
        <item name="cardBackgroundColor">@color/background_floating_material_light</item>
    </style>

    <style name="TextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textSizeLarge</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">@dimen/marginSmall</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="Button.Pressed">
        <item name="cardBackgroundColor">?attr/colorPrimary</item>
    </style>

</resources>