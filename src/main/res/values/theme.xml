<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/ez_primary</item>
        <item name="colorPrimaryDark">@color/ez_primary_dark</item>
        <item name="colorAccent">@color/ez_accent</item>
        <item name="android:textColorPrimary">@color/ez_primary_text</item>
        <item name="android:alertDialogTheme">@style/BaseTheme.Dialog</item>
    </style>

    <style name="BaseTheme.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorPrimary">?attr/colorPrimary</item>
        <item name="colorPrimaryDark">?attr/colorPrimaryDark</item>
        <item name="colorAccent">?attr/colorAccent</item>
    </style>

    <style name="AppTheme" parent="BaseTheme" />

    <style name="ScalingImage">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="BaseNavDrawerItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/marginMedium</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:textColor">@color/ez_nav_drawer_text</item>
        <item name="android:drawablePadding">@dimen/nav_drawer_item_drawable_padding</item>
    </style>

    <style name="BaseNavDrawerSubheader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/nav_drawer_item_height</item>
        <item name="android:paddingLeft">@dimen/marginMedium</item>
        <item name="android:paddingRight">@dimen/marginMedium</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/ez_nav_drawer_subheader_text</item>
    </style>
    <style name="NavDrawerSubheader" parent="BaseNavDrawerSubheader" />

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/ez_divider</item>
    </style>

    <style name="BaseTheme.Toolbar" parent="Widget.AppCompat.ActionBar">
        <item name="theme">@style/ThemeOverlay.MyApp.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="ThemeOverlay.MyApp.ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/ez_background</item>
    </style>
</resources>