<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Drawer Inset / Fake Status Bar -->
    <declare-styleable name="ScrimInsetsView">
        <attr name="insetForeground" format="reference|color" />
    </declare-styleable>

    <declare-styleable name="SpotlightView">
        <attr name="target" format="reference" />
        <attr name="mask" format="reference" />
    </declare-styleable>

    <declare-styleable name="BaseAppTheme">
        <attr name="actionBarIconColor" format="color" />
    </declare-styleable>

    <declare-styleable name="SlidingTabLayout">
        <attr name="tabBackgroundColor" format="color" />
        <attr name="tabGravity" format="enum">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
            <enum name="center" value="2" />
        </attr>
    </declare-styleable>

</resources>
